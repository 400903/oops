    print("gurunanak students")
    def royal(self):
        x=20
        y=30
        print(x,y)
obj=Civil()
obj.royal() 


#object variavble call

class Civil:
    k=44
    def royal(self):
        x=20
        y=30
        print(x,y)
obj=Civil()
obj.royal()
print(obj.k)# with above example only

