class Bankaccount:
    def __init__(self,bank_accountno,bank_branch,bank_ifsccode,bank_balance):
        self.bank_accountno=bank_accountno
        self.bank_branch=bank_branch
        self.bank_ifsccode=bank_ifsccode
        self.bank_balance=bank_balance
    def display(self):
        print(self.bank_accountno,self.bank_branch,self.bank_ifsccode,self.bank_balance)

print("bank_accountno,\t bank_branch,\t bank_ifsccode \tbank_balance")     

obj=Bankaccount("111401532","hyderabad","icic000678",10000)  
print(obj.bank_branch)
print(obj.bank_balance)# just we are one attribute here obj.instance variable
